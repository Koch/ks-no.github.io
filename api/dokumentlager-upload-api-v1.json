{
  "openapi": "3.0.0",
  "info": {
    "version": "v1",
    "title": "KS FIKS: Dokumentlager Upload Service",
    "contact": {
      "name": "Fiks-brukerstøtte",
      "url": "https://ks-no.github.io/",
      "email": "fiks-utvikling@ks.no"
    }
  },
  "servers": [
    {
      "url": "http://api.fiks.test.ks.no/"
    }
  ],
  "tags": [
    {
      "name": "DokumentlagerUpload"
    }
  ],
  "paths": {
    "/dokumentlager/api/v1/{fiksOrganisasjonId}/kontoer/{kontoId}/dokumenter": {
      "post": {
        "tags": [
          "DokumentlagerUpload"
        ],
        "summary": "Laster opp metadata og dokument",
        "description": "",
        "operationId": "uploadMetadataAndDokument",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "metadata": {
                    "type": "object",
                    "description": "Metadata for dokumentet. Trykk \"Try it out\" for å se forventet format i Swagger UI.",
                    "properties": {
                      "dokumentnavn": {
                        "type": "string",
                        "description": "Dokumentets navn. Blir navnet på dokumentet ved nedlasting."
                      },
                      "mimetype": {
                        "type": "string",
                        "description": "Dokumentets MIME-type. Blir mimetype til dokumentet når det lastes ned av mottaker."
                      },
                      "ttl": {
                        "type": "integer",
                        "format": "int64",
                        "description": "Antall sekunder dokumentet skal være tilgjengelig for nedlasting fra opplastingstidspunktet. En negativ verdi betyr at dokumentet aldri blir slettet."
                      },
                      "eksponertFor": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "description": "En liste av personer og/eller organisasjoner som har lov til å laste ned og lese dokumentet."
                      },
                      "sikkerhetsniva": {
                        "type": "integer",
                        "format": "int32",
                        "description": "Sikkerhetsnivå som kreves ved nedlasting av dokumentet. Gyldige verdier er 3 og 4. Ved nivå 4 må dokumentdata krypteres før opplasting."
                      }
                    },
                    "required": [
                      "dokumentnavn", "mimetype", "ttl", "eksponertFor", "sikkerhetsniva"
                    ],
                    "example":{
                      "dokumentnavn": "dokument.pdf",
                      "mimetype": "application/pdf",
                      "ttl": 1542978328950,
                      "eksponertFor": ["12345678910", "10987654321"],
                      "sikkerhetsniva": 3
                    }
                  },
                  "dokument": {
                    "type": "string",
                    "format": "binary",
                    "description": "Dokumentet som skal lastes opp."
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "fiksOrganisasjonId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "kontoId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "kryptert",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DokumentMetadataUploadResult"
                }
              }
            }
          }
        }
      }
    },
    "/dokumentlager/api/v1/{fiksOrganisasjonId}/kontoer/{kontoId}/dokumenter/{dokumentId}": {
      "delete": {
        "tags": [
          "DokumentlagerUpload"
        ],
        "summary": "Sletter dokumentet med gitt id",
        "description": "",
        "operationId": "deleteDokument",
        "parameters": [
          {
            "name": "fiksOrganisasjonId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "kontoId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "dokumentId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses" : {
          "200" : {
            "description" : "successful operation"
          }
        }
      }
    },
    "/dokumentlager/api/v1/public-key": {
      "get": {
        "tags": [
          "DokumentlagerUpload"
        ],
        "summary": "Laster ned public key som kan brukes til å kryptere dokumenter før opplasting",
        "description": "",
        "operationId": "getPublicKey",
        "parameters": [
          {
            "name": "fiksOrganisasjonId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "kontoId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "dokumentId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses" : {
          "200" : {
            "description" : "successful operation"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DokumentMetadataUploadResult": {
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Id for opplastet dokument"
          }
        },
        "description": "Informasjon om opplastet dokument"
      }
    }
  }
}