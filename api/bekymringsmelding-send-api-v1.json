{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "KS FIKS: Bekymringsmelding send-service",
    "description" : "Bekymringsmelding send-service",
    "contact" : {
      "name" : "Fiks brukerstøtte",
      "url" : "https://www.ks.no/fagomrader/digitalisering/utviklingsprosjekter/",
      "email" : "fiks@ks.no"
    },
    "version" : "v1"
  },
  "servers" : [ {
    "url" : "https://api.fiks.ks.no",
    "description" : "KS Fiks API host",
    "variables" : { }
  } ],
  "tags" : [ {
    "name" : "bekymringsmelding-send",
    "description" : "API for å håndtere funksjonalitet vedr. bekymringsmelding"
  } ],
  "paths" : {
    "/bekymringsmelding/send/api/v1/send" : {
      "post" : {
        "tags" : [ "bekymringsmelding-send" ],
        "description" : "Sender en ordre som skal sendes videre til enten FiksIO eller Fiks-Print",
        "operationId" : "sendOrdre",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/OrdreModel"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "Send ordre.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "string",
                  "format" : "uuid"
                }
              }
            }
          }
        }
      }
    },
    "/bekymringsmelding/send/api/v1/status" : {
      "post" : {
        "tags" : [ "bekymringsmelding-send" ],
        "description" : "Oppdaterer status på en ordre",
        "operationId" : "oppdaterStatus",
        "parameters" : [ {
          "name" : "status",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "meldingId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Status mottatt",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/StatusSvarModel"
                }
              }
            }
          }
        }
      }
    },
    "/bekymringsmelding/send/api/v1/send/{id}" : {
      "post" : {
        "tags" : [ "bekymringsmelding-send" ],
        "description" : "Sender en bestemt ordre på nytt enten til FiksIO eller Fiks-Print basert på ID",
        "operationId" : "sendOrdreById",
        "parameters" : [ {
          "name" : "id",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "404" : {
            "description" : "Ingen ordre funnet"
          },
          "200" : {
            "description" : "Send ordre."
          }
        }
      }
    },
    "/bekymringsmelding/send/api/v1/konfigurasjon/{fiksOrgId}/{fortrolighetsNiva}" : {
      "get" : {
        "tags" : [ "bekymringsmelding-send" ],
        "description" : "Henter konfigurasjon for sending",
        "operationId" : "hentKonfigurasjonPrint",
        "parameters" : [ {
          "name" : "fiksOrgId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        }, {
          "name" : "fortrolighetsNiva",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "enum" : [ "NORMAL", "UNTATT_OFFENTLIGHET" ]
          }
        } ],
        "responses" : {
          "404" : {
            "description" : "Ingen konfigurasjon funnet for gitt fiksOrgId og fortrolighetsnivå"
          },
          "200" : {
            "description" : "Konfigurasjon funnet",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/SendKonfigurasjon"
                }
              }
            }
          }
        }
      }
    },
    "/bekymringsmelding/send/api/v1/konfigurasjon/{fiksOrgId}/{fortrolighetsNiva}/{fiksIOKontoId}" : {
      "get" : {
        "tags" : [ "bekymringsmelding-send" ],
        "description" : "Henter konfigurasjon for sending",
        "operationId" : "hentKonfigurasjon",
        "parameters" : [ {
          "name" : "fiksOrgId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        }, {
          "name" : "fortrolighetsNiva",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "enum" : [ "NORMAL", "UNTATT_OFFENTLIGHET" ]
          }
        }, {
          "name" : "fiksIOKontoId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "404" : {
            "description" : "Ingen konfigurasjon funnet for gitt fiksOrgId og fortrolighetsnivå"
          },
          "200" : {
            "description" : "Konfigurasjon funnet",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/SendKonfigurasjon"
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "AdresseModel" : {
        "required" : [ "adresselinje1", "poststed" ],
        "type" : "object",
        "properties" : {
          "adresselinje1" : {
            "type" : "string"
          },
          "adresselinje2" : {
            "type" : "string"
          },
          "adresselinje3" : {
            "type" : "string"
          },
          "postnummer" : {
            "pattern" : "^[0-9]{4}$",
            "type" : "string"
          },
          "poststed" : {
            "type" : "string"
          }
        }
      },
      "FiksIOOrdreModel" : {
        "required" : [ "dokumentRef", "meldingstype", "mottakerKontoId" ],
        "type" : "object",
        "properties" : {
          "mottakerKontoId" : {
            "type" : "string",
            "format" : "uuid"
          },
          "meldingstype" : {
            "type" : "string"
          },
          "dokumentRef" : {
            "type" : "string",
            "format" : "uuid"
          },
          "ttl" : {
            "type" : "integer",
            "format" : "int64"
          }
        }
      },
      "OrdreModel" : {
        "required" : [ "print" ],
        "type" : "object",
        "properties" : {
          "print" : {
            "$ref" : "#/components/schemas/PrintOrdreModel"
          },
          "fiksIO" : {
            "$ref" : "#/components/schemas/FiksIOOrdreModel"
          }
        }
      },
      "PrintOrdreModel" : {
        "required" : [ "adresse", "dokumentRef", "konteringsKode", "leverandorRef" ],
        "type" : "object",
        "properties" : {
          "dokumentRef" : {
            "type" : "string",
            "format" : "uuid"
          },
          "adresse" : {
            "$ref" : "#/components/schemas/AdresseModel"
          },
          "leverandorRef" : {
            "type" : "string",
            "format" : "uuid"
          },
          "konteringsKode" : {
            "type" : "string"
          }
        }
      },
      "StatusSvarModel" : {
        "type" : "object",
        "properties" : {
          "status" : {
            "type" : "string",
            "enum" : [ "OK", "FEIL" ]
          }
        }
      },
      "FiksIoKonfigurasjon" : {
        "required" : [ "offentligNokkel" ],
        "type" : "object",
        "properties" : {
          "offentligNokkel" : {
            "type" : "string"
          }
        }
      },
      "PrintKonfigurasjon" : {
        "required" : [ "leverandorId", "offentligNokkel" ],
        "type" : "object",
        "properties" : {
          "leverandorId" : {
            "type" : "string",
            "format" : "uuid"
          },
          "offentligNokkel" : {
            "type" : "string"
          }
        }
      },
      "SendKonfigurasjon" : {
        "type" : "object",
        "properties" : {
          "printKonfigurasjon" : {
            "$ref" : "#/components/schemas/PrintKonfigurasjon"
          },
          "fiksIoKonfigurasjon" : {
            "$ref" : "#/components/schemas/FiksIoKonfigurasjon"
          }
        }
      }
    }
  }
}