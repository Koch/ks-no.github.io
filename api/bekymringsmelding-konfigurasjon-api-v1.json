{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "KS FIKS: Bekymringsmelding konfigurasjon service",
    "description" : "Bekymringsmelding konfigurasjon service",
    "contact" : {
      "name" : "Fiks brukerstøtte",
      "url" : "https://www.ks.no/fagomrader/digitalisering/utviklingsprosjekter",
      "email" : "fiks@ks.no"
    },
    "version" : "v1"
  },
  "servers" : [ {
    "url" : "https://api.fiks.ks.no",
    "description" : "KS Fiks API host",
    "variables" : { }
  } ],
  "tags" : [ {
    "name" : "bekymringsmeldingKommune",
    "description" : "API for å håndtere funksjonalitet vedr. konfigurasjon i bekymringsmelding"
  } ],
  "paths" : {
    "/bekymringsmelding/api/v1/konfigurasjon/{fiksOrgId}/bydeler" : {
      "get" : {
        "tags" : [ "bekymringsmeldingKonfigurasjon" ],
        "description" : "Henter bydeler for en kommune.",
        "operationId" : "getBydeler",
        "parameters" : [ {
          "name" : "fiksOrgId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Returnerer alle bydeler for en kommune.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Bydel"
                  }
                }
              }
            }
          },
          "404" : {
            "description" : "Ingen bydeler ble funnet."
          }
        }
      },
      "post" : {
        "tags" : [ "bekymringsmeldingKonfigurasjon" ],
        "description" : "Oppretter ny bydel",
        "operationId" : "createBydel",
        "parameters" : [ {
          "name" : "fiksOrgId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/Bydel"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "201" : {
            "description" : "Oppretter ny bydel.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "string"
                }
              }
            }
          }
        }
      }
    },
    "/bekymringsmelding/api/v1/konfigurasjon/{fiksOrgId}/bydeler/{bydelsnummer}" : {
      "get" : {
        "tags" : [ "bekymringsmeldingKonfigurasjon" ],
        "description" : "Henter en bydel for en kommune.",
        "operationId" : "getBydel",
        "parameters" : [ {
          "name" : "fiksOrgId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        }, {
          "name" : "bydelsnummer",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Returnerer en bydel for en kommune.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Bydel"
                }
              }
            }
          },
          "404" : {
            "description" : "Ingen bydeler ble funnet."
          }
        }
      },
      "delete" : {
        "tags" : [ "bekymringsmeldingKonfigurasjon" ],
        "description" : "Sletter en bydel",
        "operationId" : "deleteBydel",
        "parameters" : [ {
          "name" : "fiksOrgId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        }, {
          "name" : "bydelsnummer",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "204" : {
            "description" : "Sletter en bydel.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Bydel"
                }
              }
            }
          }
        }
      }
    },
    "/bekymringsmelding/api/v1/konfigurasjon/{fiksOrgId}" : {
      "put" : {
        "tags" : [ "bekymringsmeldingKonfigurasjon" ],
        "description" : "Oppdaterer eksisterende bydel",
        "operationId" : "updateBydel",
        "parameters" : [ {
          "name" : "fiksOrgId",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/Bydel"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "204" : {
            "description" : "Oppdaterer eksisterende bydel."
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Bydel" : {
        "required" : [ "bydelsnavn", "fiksOrgId", "kontaktinformasjon", "konto" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "format" : "int32"
          },
          "bydelsnummer" : {
            "pattern" : "^[0-9]{1,2}$",
            "type" : "string"
          },
          "bydelsnavn" : {
            "type" : "string"
          },
          "fiksOrgId" : {
            "type" : "string",
            "format" : "uuid"
          },
          "hovedBydel" : {
            "type" : "boolean"
          },
          "konto" : {
            "$ref" : "#/components/schemas/Konto"
          },
          "kontaktinformasjon" : {
            "$ref" : "#/components/schemas/Kontaktinformasjon"
          }
        }
      },
      "Kontaktinformasjon" : {
        "required" : [ "postadresseAdresselinje1", "postadressePoststed" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "format" : "int32"
          },
          "telefon" : {
            "pattern" : "^[+]?[0-9]+([- ][0-9]+)*$",
            "type" : "string"
          },
          "epost" : {
            "type" : "string"
          },
          "postadresseAdresselinje1" : {
            "type" : "string"
          },
          "postadresseAdresselinje2" : {
            "type" : "string"
          },
          "postadresseAdresselinje3" : {
            "type" : "string"
          },
          "postadressePostnr" : {
            "pattern" : "^[0-9]{4}$",
            "type" : "string"
          },
          "postadressePoststed" : {
            "type" : "string"
          }
        }
      },
      "Konto" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "format" : "int32"
          },
          "aktivertBekymringsmelding" : {
            "type" : "boolean"
          },
          "fiksIoKonto" : {
            "type" : "string",
            "format" : "uuid"
          },
          "brukFiksIo" : {
            "type" : "boolean"
          }
        }
      }
    }
  }
}